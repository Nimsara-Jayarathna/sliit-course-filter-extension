{
  "manifest_version": 3,
  "name": "My Courses",
  "version": "2.0",
  "description": "Automatically detects and groups My Courses by semester with an interactive filtering UI.",
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://courseweb.sliit.lk/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "styles.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}